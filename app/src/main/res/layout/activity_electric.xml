<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_picture1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="ELECTRICAL"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="130dp"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="2">

            <!--<ImageView-->
                <!--android:id="@+id/iv_battery"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_marginLeft="40dp"-->
                <!--android:src="@drawable/ic_battery"/>-->
            <ImageView
                android:id="@+id/iv_switch"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_switch"
                android:background="@drawable/imageview_border"/>

            <ImageView
                android:id="@+id/iv_allied"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_allied"
                android:background="@drawable/imageview_border"/>

            <ImageView
                android:id="@+id/iv_circuit"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_circuit"
                android:background="@drawable/imageview_border"/>

            <ImageView
                android:id="@+id/iv_wires"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_wires"
                android:background="@drawable/imageview_border"/>

            <ImageView
                android:id="@+id/iv_appliance"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_appliance"
                android:background="@drawable/imageview_border"/>

            <ImageView
                android:id="@+id/iv_solar"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_solar"
                android:background="@drawable/imageview_border"/>





        </GridLayout>

    </LinearLayout>

</RelativeLayout>